@using CodingEvents.ViewModels;
@model AddEventViewModel;



<h1>Add Event</h1>
<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
        <input class="form-control" asp-for="Name" placeholder="event name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <span><input class="form-control" asp-for="Description" placeholder="description" /></span>
        
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="ContactEmail" placeholder="contact email" />
        <span asp-validation-for="ContactEmail"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Add Event" />

</form>
