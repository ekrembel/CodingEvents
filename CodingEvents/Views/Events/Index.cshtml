@using CodingEvents.Models;
@model List<Event>

<h1>Coding Events</h1>
<div>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</div>

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
    <table class="table">

        <tr>
            <th>Id</th>
            <th>Event</th>
            <th>Description</th>
            <th>Contact</th>
            <th>Place</th>
            <th>Num of Attendees</th>
            <th>Registration Required</th>
            <th>Edit</th>
            <th>
                Remove
            </th>
        </tr>
        @foreach (Event item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.ContactEmail</td>
                <td>@item.Place</td>
                <td>@item.NumOfAttendees</td>
                <td>@item.IsRegistrationRequired</td>
                <td>
                    <form method="get" action="/events/edit">
                        <button class="btn btn-success" type="submit" name="eventId" value="@item.Id">Edit</button>
                    </form>
                </td>
                <td>
                    <form method="post" action="/events/">
                        <input type="hidden" name="eventId" value="@item.Id">
                        <button class="btn btn-danger" type="submit">Remove</button>
                    </form>
                </td>

            </tr>
        }
    </table>
}